{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "ES2015",
      "es2018",
      "es6",
      "dom"
    ],
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "react",
    "baseUrl": "./",
    "module": "ESNext",
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "paths": {
      "@@/*": [
        ".dumi/tmp/*"
      ],
      "@front-toolkit/babel-plugin-jsx-style-px-to-tem": [
        "./packages/babel-plugin-jsx-style-px-to-tem/src/"
      ]
    }
  },
  "include": [
    ".dumirc.ts",
    "src/**/*",
    "tests/**/*"
  ]
}